// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.db"
}

model Admin {
  id String @id
}

model Award {
  id          Int       @id @default(autoincrement())
  name        String
  requirement String
  recipients  Student[]
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  type        String
  location    String
  start       DateTime
  end         DateTime
  image       String
  points      Int
  isCanceled  Boolean  @default(false)
  reason      String?

  participants StudentsOnEvents[]
}

model Student {
  id         String @id
  firstName  String
  middleName String
  lastName   String
  grade      Int    @default(-1)
  bio        String @default("")
  image      String @default("default.jpg")
  points     Int    @default(0)
  rank       Int?

  awards Award[]
  events StudentsOnEvents[]
}

model StudentsOnEvents {
  event     Event   @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId   Int
  student   Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  studentId String

  attended    Boolean @default(false)
  studentName String

  @@id([eventId, studentId])
}

model News {
  id          Int      @id @default(autoincrement())
  name        String
  datetime    DateTime
  description String
}
