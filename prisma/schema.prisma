// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.db"
}

model Admin {
  id String @id
}

model Award {
  id          Int       @id @default(autoincrement())
  name        String
  requirement String
  recipients  Student[]
}

model Event {
  id           Int                @id @default(autoincrement())
  datetime     DateTime
  description  String
  image        String
  location     String
  name         String
  points       Int
  type         String
  participants Student[]
}

model Student {
  id         String             @id
  firstName  String
  middleName String
  lastName   String
  grade      Int
  points     Int
  rank       Int
  awards     Award[]
  events     Event[]
}

model News {
  id          Int      @id @default(autoincrement())
  name        String
  datetime    DateTime
  description String
}
